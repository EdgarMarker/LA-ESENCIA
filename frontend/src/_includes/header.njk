<header id="header" class="">
  {% for marca in empresa %}
  <div id="inner__header">
    <div class="mask">
      <div class="mask-left"></div>
      <div class="circle-cut"></div>
      <div class="mask-right"></div>
    </div>
    <!--Mascara
      -absoluta,
      -los 3 elementos, 50% - 50px
    -->
    <!--
      <picture>
        {% for format, images in marca.brandLogo %}
        <source srcset="{{ images | srcset }}" sizes="(max-width: 1920px) 100vw, 1920px" type="image/{{ format }}"/>
        {% endfor %}
        <img src="{{ marca.brandLogo.svg[0].url }}" alt="{{ marca.brandLogo.alt }}"/>
      </picture>
      -->
    <div class="nav">
      {% include 'main-nav-izq.njk' %}

      <a id="logo__main" href="/">
        {% for logo in logosEmpresa %}
        <img src="{{ logo.brandLogo.media.url }}" alt="prueba" />
        {%endfor%}
      </a>

      {% include 'main-nav-der.njk' %}
    </div>

    <div id="mobile__trigger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div id="mobile__menu">
    {% include 'main-nav-izq.njk' %} {% include 'main-nav-der.njk' %}
    <a
      class="cta__msn"
      href="https://wa.me/521{{ marca.brandPhone }}"
      target="_blank"
      >Mensaje</a
    >
  </div>
  <div id="mobile__active"></div>
  {% endfor %}
</header>

<style>
  #inner__header {
    background-color: transparent;
    max-height: 60px;
    justify-content: space-between;
    position: relative;

    .mask {
      z-index: 1;
      position: absolute;
      left: 0;
      top: 0;
      display: flex;
      width: 100%;
      height: 60px;
      justify-content: space-between;
      .mask-left,
      .mask-right {
        background: var(--bg-primary);
        width: calc(50% - 50px);
      }
    }
    .nav{
      width: 100%;
      display: flex;
      height: 60px;
      justify-content: space-between;
      position: relative;
      z-index: 5;
    }
    .nav__ul__left,
    .nav__ul__right {
      width: calc(50% - 50px);
      justify-content: space-evenly;
    }
    #logo__main {
      position: relative;
      width: 180px;
      height: 100%;
      img{
        position: absolute;
        top: 44px;
      }
    }
    .circle-cut {
      --r: 80px;
      width: 180px;
      height: 60px;
      aspect-ratio: 180 / 60;
      background: var(--bg-primary);

      mask: radial-gradient(var(--r) at 50% 150%, #0000 calc(100% - 1px), #000);
    }
  }
  #logo__main {
    position: relative;
    img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
  @media (max-width: 1024px) {
    .nav, .mask{
      display: none !important;
    }
  }
</style>
